@model RoomsViewModel

@{
    ViewData["Title"] = "SingleRoom";
}

<h1>SingleRoom</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomType.RoomName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomType.RoomName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomType.RoomTypeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Hotel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room.Hotel.HotelId)
        </dd>
    </dl>
</div>

<div>
    <h4>Facilities</h4>
    <hr />
@foreach(var facility in Model.Facilities)
{

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => facility.FacilityName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => facility.FacilityName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => facility.FacilityDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => facility.FacilityDescription)
            </dd>
        </dl>
}
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
