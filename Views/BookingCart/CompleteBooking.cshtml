
@model CheckOut

<form method="post" name="razorpayForm">
    <input id="razorpay_payment_id" type="hidden" name="razorpay_payment_id" />
    <input id="razorpay_order_id" type="hidden" name="razorpay_order_id" />
    <input id="razorpay_signature" type="hidden" name="razorpay_signature" />
</form>


    <style>

        .receipt {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .header {
            background-color: #282834;
            color: #fff;
            padding: 10px;
            border-radius: 10px 10px 0 0;
        }

        h1 {
            font-size: 24px;
            margin: 0;
        }

        .info {
            margin-top: 20px;
        }

        p {
            margin: 5px 0;
        }

        .total {
            background-color: #282834;
            color: #fff;
            padding: 10px;
            border-radius: 0 0 10px 10px;
            margin-top: 20px;
        }

            .total p {
                margin: 0;
            }
    </style>

    <div class="receipt">
        <div class="header">
            <h1>Hotel Booking Receipt</h1>
        </div>

        <div class="info">
            <p><strong>Receipt Number:</strong> @Model.BookingCartId</p>
            <p><strong>Date:</strong> @Model.BookedDate</p>
            <p><strong>Customer Name:</strong> @Model.User.UserName</p>
            <p><strong>UserName:</strong> @Model.User.UserName</p>
        </div>

        <table class="table table-striped" width="100%">
            <tr>
                <th>Room Type</th>
                <th>Quantity</th>
                <th>No. of Nights</th>
                <th>Price</th>
                <th>Total price</th>
                <th>Gst Percentage</th>
                <th>Gst Amount</th>
                <th>Total</th>
            </tr>
            @foreach(var item in Model.Items)
            {
                <tr>
                    <td>@item.BookingRoomDetails.Room.RoomType.RoomName</td>
                    <td>@item.BookingRoomDetails.RoomQuantity</td>
                    <td>@Convert.ToInt32((new DateTime(@item.BookingRoomDetails.CheckOutDate.Year, @item.BookingRoomDetails.CheckOutDate.Month, @item.BookingRoomDetails.CheckOutDate.Day) - new DateTime(@item.BookingRoomDetails.CheckInDate.Year, @item.BookingRoomDetails.CheckInDate.Month, @item.BookingRoomDetails.CheckInDate.Day)).Days)</td>
                    <td>@item.BookingRoomDetails.RoomPrice</td>
                    <td>@item.RoomPriceFee</td>
                    <td>@item.BookingRoomDetails.Room.RoomType.RoomGst</td>
                    @{
                        var gstamt = item.RoomPriceFee * item.BookingRoomDetails.Room.RoomType.RoomGst/100;
                        var roomprice = item.RoomPriceFee + gstamt;
                    }
                    <td>@gstamt</td>
                    <td>@roomprice</td>
                </tr>
            }
            @foreach(var item in Model.Services)
            {
                <tr>
                    <td>@item.Service.ServiceName</td>
                    <td>@item.ServiceQuantity</td>
                    <td>-</td>
                    <td>@item.ServicePriceAmount</td>
                    <td>@item.ServicePriceAmount</td>
                    <td>18</td>
                    @{
                        var gstamt = item.ServicePriceAmount * 18 / 100;
                        var roomprice = item.ServicePriceAmount + gstamt;
                    }
                    <td>@gstamt</td>
                    <td>@roomprice</td>
                </tr>
            }
            <tr>
                <td colspan="5"></td>
                <td colspan="3"><p><strong>Total Amount:</strong> @Model.Total</p></td>
            </tr>
        </table>

        <div class="total row">
            <a id="rzp-button1" type="button" class="btn" style="width:20%;background-color:#25a18e;color:white;font-weight:bold;font-size:medium;float:right;margin-left:auto;">Proceed To Pay</a>
        </div>

    </div>


@section Scripts{
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        var orderId = "@ViewBag.orderid"
        var options = {
            "name": "Park View",
            "description": "To book luxurious rooms and world class services.",
            "order_id": orderId,
            "handler": function (response) {
                alert(response.razorpay_payment_id);
                alert(response.razorpay_order_id);
                alert(response.razorpay_signature);
                
            },
            "prefill": {
                "name": "Kongsberg India",
                "email": "kongsberg.india@example.com",
                "contact": "+919000090000",
            },
            "notes": {
                "address": "Bangalore"
            },
            "theme": {
                "color": "#25a18e"
            }
        }
        // Boolean whether to show image inside a white frame. (default: true)
        options.theme.image_padding = false;
        options.handler = function (response) {

            document.getElementById('razorpay_payment_id').value = response.razorpay_payment_id;
            document.getElementById('razorpay_order_id').value = orderId;
            document.getElementById('razorpay_signature').value = response.razorpay_signature;
            document.razorpayForm.submit();
            window.location.href = `https://localhost:7112/BookingCart/SuccessfulPayment?payid=${response.razorpay_payment_id}&sigid=${response.razorpay_signature}`;
        };
        options.modal = {
            ondismiss: function () {
                console.log("This code runs when the popup is closed");
            },
            // Boolean indicating whether pressing escape key
            // should close the checkout form. (default: true)
            escape: true,
            // Boolean indicating whether clicking translucent blank
            // space outside checkout form should close the form. (default: false)
            backdropclose: false
        };
        var rzp = new Razorpay(options);
        document.getElementById('rzp-button1').onclick = function (e) {
            rzp.open();
            e.preventDefault();
        }
    </script>
}

   


