@{
    ViewData["Title"] = "Home Page";
}
<style>
    form {
        max-width: 960px;
        margin: 3%;
        margin-left: 20%;
        background-color: #fff;
     
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="date"],
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 16px;
    }

    input[type="submit"] {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        font-size: 18px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    .buttoncentere{
        text-align:center;
    }

    .Formcontent{
        background-color:rgb(241, 223, 176);
    }
</style>
@section Scripts{
    <script src="~/client/main.js"></script>
    <script src="~/client/polyfills.js"></script>
    <script src="~/client/runtime.js"></script>
    <script src="~/client/vendor.js"></script>
}
@section head {
    <link href="~/client/styles.css" rel="stylesheet" />
}
<app-root></app-root>

<div class="Formcontent">
    <form action="#" method="post">
        <div style="display: flex; justify-content: space-between; align-items: center; margin:2%">
            <div style="flex: 1; margin:2%">
                <label for="checkin">Check-In Date:</label>
                <input type="date" id="checkin" name="checkin" required>
            </div>
            <div style="flex: 1; margin:2%">
                <label for="checkout">Check-Out Date:</label>
                <input type="date" id="checkout" name="checkout" required>
            </div>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center;  margin:2%">
            <div style="flex: 1; margin:2%">
                <label for="adults">Number of Adults:</label>
                <select id="adults" name="adults" required>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
            <div style="flex: 1; margin:2%">
                <label for="children">Number of Children:</label>
                <select id="children" name="children" required>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
        </div>
        <div class="buttoncenter">
        <input style="text-align:center; margin:2%; margin-left:40%;" type="submit" value="Check Availability">
        </div>
    </form>
</div>



